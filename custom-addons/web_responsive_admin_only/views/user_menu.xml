<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide theme switcher (water drop icon) for non-admin users -->
    <template id="user_menu_theme_admin_only" inherit_id="web_responsive.UserMenu" name="Hide Theme Switcher for Non-Admin">
        <xpath expr="//div[hasclass('o_dropdown_toggler')][.//i[contains(@class, 'fa-tint')]]" position="attributes">
            <attribute name="t-if">widget.env.user.has_group('base.group_system')</attribute>
        </xpath>
    </template>
    
    <!-- Hide search type switcher for non-admin users -->
    <template id="user_menu_search_admin_only" inherit_id="web_responsive.UserMenu" name="Hide Search Switcher for Non-Admin">
        <xpath expr="//div[hasclass('o_dropdown_toggler')][.//i[contains(@class, 'fa-search')]]" position="attributes">
            <attribute name="t-if">widget.env.user.has_group('base.group_system')</attribute>
        </xpath>
    </template>
</odoo>